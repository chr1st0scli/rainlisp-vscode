{
  "name": "rainlisp-vscode",
  "displayName": "RainLisp for VSCode",
  "description": "RainLisp support for VSCode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Themes",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rainlisp-vscode.evaluate",
        "title": "Evaluate RainLisp code"
      }
    ],
    "keybindings":[
      {
        "command": "rainlisp-vscode.evaluate",
        "key": "ctrl+F5",
        "mac": "cmd+9",
        "when": "editorTextFocus"
      }
    ],
    "languages": [{
      "id": "rainlisp",
      "aliases": ["RainLisp", "rainlisp"],
      "extensions": [".rl"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "rainlisp",
      "scopeName": "source.rainlisp",
      "path": "./syntaxes/rainlisp.tmLanguage.json"
    }],
    "snippets": [
      {
        "language": "rainlisp",
        "path": "./syntax-grammar-snippets.json"
      }
    ],
    "themes": [
      {
        "label": "RainLisp Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/rainlisp-color-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
